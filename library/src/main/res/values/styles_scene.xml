<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="box">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">34dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:src">@drawable/box</item>
    </style>

    <style name="box_start" parent="box">
        <item name="android:translationX">-55dp</item>
    </style>

    <style name="truck_start" parent="truck">
        <item name="android:translationX">-64dp</item>
    </style>

    <style name="box_end" parent="box">
        <item name="android:translationX">100dp</item>
    </style>

    <style name="truck_end" parent="truck">
        <item name="android:translationX">-350dp</item>
    </style>


    <style name="truck">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:translationX">0dp</item>
        <item name="android:src">@drawable/truck


        </item>
    </style>
</resources>